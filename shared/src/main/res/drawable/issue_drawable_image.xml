<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bg_status_item">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="#e86c16" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
    <item
        android:width="12dp"
        android:height="12dp"
        android:id="@+id/issueIcon"
        android:drawable="@drawable/ic_issue_pin"
        android:gravity="center"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</layer-list>